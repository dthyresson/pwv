---
import { getCollection } from 'astro:content';

const rollingFundPortfolio = await getCollection('rollingFundPortfolio');
const sortedRollingFundPortfolio = rollingFundPortfolio.sort((a, b) =>
  a.data.name.localeCompare(b.data.name)
);

const angelPortfolio = await getCollection('angelPortfolio');
const sortedAngelPortfolio = angelPortfolio.sort((a, b) =>
  a.data.name.localeCompare(b.data.name)
);

const testimonials = await getCollection('testimonials');
const sortedTestimonials = testimonials.sort((a, b) =>
  a.data.name.localeCompare(b.data.name)
);
---

<main class="mx-auto my-12">
  <header id="about" class="flex flex-col items-center">
    <img
      src="/images/logo.svg"
      alt="PWV Logo"
      class="w-logo-small sm:w-logo-medium md:w-logo-large"
    />
  </header>
  <section>
    <h1 class="text-center">
      PWV invests in early&#8209;stage technology companies.
    </h1>

    <p>
      PWV is Tom Preston&#8209;Werner, David&nbsp;Price, and David Thyresson.
    </p>

    <p>
      We are three entrepreneurs and technologists committed to a vision of a
      future where technological progress and human flourishing go hand in hand.
      We invest to help make this future possible.
    </p>

    <p>
      Beyond capital, we leverage our unparalleled network and expertise to help
      startups scale and achieve product-market fit.
    </p>

    <h2>How We Invest</h2>
    <p>We invest from pre-seed through Series A.</p>
    <ul class="pl-6">
      <li></li>

      <li>
        <strong class="font-grotesk">Early Stage</strong>: We lead and co-lead.
      </li>

      <li>
        <strong class="font-grotesk">Follow-on</strong>: When applicable, we
        support growth with additional capital.
      </li>
    </ul>
  </section>

  <section id="portfolio">
    <h3>Representative Investments</h3>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {
        sortedRollingFundPortfolio.map((company) => (
          <div class="text-center p-2">
            <p>{company.data.name}</p>
          </div>
        ))
      }
    </div>

    <h3>Angel Investments (2012â€“2022)</h3>
    <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
      {
        sortedAngelPortfolio.map((company) => (
          <div class="text-center p-2">
            <p>{company.data.name}</p>
          </div>
        ))
      }
    </div>
  </section>
  <section id="testimonials">
    <h2>What Founders Say About Us</h2>

    <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
      {
        sortedTestimonials.map((testimonial) => (
          <div class="p-6 bg-gray-50 rounded-lg">
            <blockquote class="mb-4 italic">
              "{testimonial.data.quote}"
            </blockquote>
            <div class="flex flex-col">
              <cite class="font-semibold not-italic">
                {testimonial.data.name}
              </cite>
              <span class="text-sm text-gray-600">
                {testimonial.data.title},{' '}
                <a
                  href={testimonial.data.url}
                  class="text-blue-600 hover:underline"
                >
                  {testimonial.data.company}
                </a>
              </span>
            </div>
          </div>
        ))
      }
    </div>
  </section>

  <hr />
</main>
<footer class="container mx-auto max-w-screen-lg my-4">
  <div
    class="flex flex-col items-center space-y-2 md:flex-row md:justify-between md:space-y-0"
  >
    <p class="text-center md:text-left">&copy;&nbsp;PWV 2025</p>
    <p class="text-center md:text-left">
      Made with Cursor, fal, Vite, Netlify, and GitHub
    </p>
  </div>
</footer>
